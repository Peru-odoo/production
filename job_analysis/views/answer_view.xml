<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view -->
    <record id="questionnaires_answer_tree_view" model="ir.ui.view">
        <field name="name">questionnaires.answer.tree</field>
        <field name="model">questionnaires.answer</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Registered'">
                <field name="batch_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="employee_id"/>
            </tree>
        </field>
    </record>

    <record id="answer_line_tree_view" model="ir.ui.view">
        <field name="name">answer.line.tree</field>
        <field name="model">answer.line</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Answers'">
                <field name="question_id"/>
                <field name="row_answer"/>
                <field name="create_date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="manager_id"/>
            </tree>
        </field>
    </record>

    <record id="questionnaires_answer_form_view" model="ir.ui.view">
        <field name="name">questionnaires.answer.form</field>
        <field name="model">questionnaires.answer</field>
        <field name="arch" type="xml">
            <form string="Registered">
                <sheet>
                    <group>
                        <group>
                            <field name="batch_id"/>
                            <field name="employee_id"/>
                            <field name="manager_id"/>
                            <field name="department_id"/>
                            <field name="position_id"/>
                            <label for="from_date" string="Period"/>
                            <div>
                                <field name="from_date" class="oe_inline" required="1"/>
                                -
                                <field name="to_date" class="oe_inline"
                                       nolabel="1" required="1"/>
                            </div>
                        </group>
                    </group>
                    <field name="answer_line_ids" mode="tree" attrs="{'readonly': False}">
                        <tree editable="bottom" create="false" delete="0">
                            <field name="question_id"/>
                            <field name="row_answer"/>
                            <field name="answer_date" readonly="1"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="answer_line_form_view" model="ir.ui.view">
        <field name="name">answer.line.form</field>
        <field name="model">answer.line</field>
        <field name="arch" type="xml">
            <form string="Answer">
                <sheet>
                    <group>
                        <field name="question_id"/>
                        <field name="row_answer"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="questionnaires_answer_search" model="ir.ui.view">
        <field name="name">questionnaires.answer.search</field>
        <field name="model">questionnaires.answer</field>
        <field name="arch" type="xml">
            <search string="Questionnaires Analysis">
                <field name="batch_id" string="Name"/>
                <field name="employee_id"/>
                <separator/>
                <filter string="Date" name="filter_start_date" date="from_date"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Batch" name="batch" domain="[]" context="{'group_by': 'batch_id'}"/>
                    <filter string="Employee" name="employee_id" domain="[]" context="{'group_by': 'employee_id'}"/>
                    <filter string="Department" name="department_id" domain="[]"
                            context="{'group_by': 'department_id'}"/>
                    <filter string="Position" name="position_id" domain="[]"
                            context="{'group_by': 'position_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="answer_line_search" model="ir.ui.view">
        <field name="name">answer.line.search</field>
        <field name="model">answer.line</field>
        <field name="arch" type="xml">
            <search string="Answer">
                <field name="question_id" string="Question"/>
                <field name="employee_id"/>
                <group expand="0" string="Group By">
                    <filter string="Batch" name="batch" domain="[]" context="{'group_by': 'batch_id'}"/>
                    <filter string="Question" name="question" domain="[]"
                            context="{'group_by': 'question_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_questionnaires_answer">
        <field name="name">Registered</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">questionnaires.answer</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="questionnaires_answer_search"/>
        <field name="domain">[]</field>
        <field name="context">{'search_default_batch': 1}</field>
    </record>
    <record model="ir.actions.act_window" id="action_answer_line">
        <field name="name">Answer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">answer.line</field>
        <field name="search_view_id" ref="answer_line_search"/>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{'group_by': ['batch_id', 'question_id']}</field>
        <!--        <field name="context">{'search_default_question': 1,'search_default_batch': 1}</field>-->
    </record>

    <menuitem id="menu_questionnaires_answer_parent" parent="menu_job_analysis"
              name="Questionnaires Answer" sequence="2" groups="job_analysis.group_job_analysis_user"/>

    <menuitem id="menu_questionnaires_answer" action="action_questionnaires_answer"
              parent="menu_questionnaires_answer_parent"
              name="Questionnaires Answer" sequence="1"/>
    <menuitem id="menu_answer_analysis" action="action_answer_line"
              parent="menu_questionnaires_answer_parent"
              name="Answer Analysis" sequence="3"/>
</odoo>
