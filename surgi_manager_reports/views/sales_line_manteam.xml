<odoo>
    <data>
	<record model="ir.ui.view" id="line_manger_template_only_form_view">
		<field name="name">line.manger.template.pack.form</field>
		<field name="model">crm.team</field>
		<field name="inherit_id" ref="sales_team.crm_team_view_form" />
		<field name="arch" type="xml">
			<field name="user_id" position="after">
				<field name="line_manager_team" string="Line Manager"/>

			</field>

		</field>
	</record>


	<record model="ir.ui.view" id="line_manger_category_template_only_form_view">
		<field name="name">line.manger.category.template.pack.form</field>
		<field name="model">product.category</field>
		<field name="inherit_id" ref="product.product_category_form_view" />
		<field name="arch" type="xml">
			<field name="parent_id" position="after">
				<field name="line_manager_category" string="Line Manager"/>

			</field>

		</field>
	</record>











    </data>


</odoo>