<odoo>
    <data>

        <record id="tree_view_scientific_committee_finalpage" model="ir.ui.view">
            <field name="name">Scientific Committee</field>
            <field name="model">scientific.committee</field>
            <field name="arch" type="xml">
                <tree string="Scientific Committee">
                    <field name="name"/>
                    <field name="product_class"/>
                    <field name="supplier"/>
                    <field name="sterile"/>
                    <field name="scientific_committe_num"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="registration_line"/>
                    <field name="registration_plan"/>

                </tree>
            </field>
        </record>


        <record id="form_view_scientific_committee_final" model="ir.ui.view">
            <field name="name">Scientific Committee</field>
            <field name="model">scientific.committee</field>
            <field name="arch" type="xml">
                <form string="Scientific Committee">

                    <sheet>
                        <div style="text-align:center">

                            <group string="Scientific Committee" col="4" colspan="6">

                            </group>

                        </div>
                        <group>
                            <div>
                                <group string="">
                                    <field name="name"/>
                                    <field name="product_class"/>
                                    <field name="supplier"/>
                                    <field name="sterile"/>

                                </group>
                            </div>

                            <div>
                                <group string="">

                                    <field name="scientific_committe_num"/>

                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>

                                </group>
                            </div>


                            <div>
                                <group string="">
                                    <field name="registration_line"/>
                                    <field name="registration_plan"/>
                                </group>
                            </div>


                        </group>


                        <notebook>
                            <page name="product" string="Description">

                                <field name="description">


                                </field>

                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_scientific_committee_line_pages" model="ir.actions.act_window">
            <field name="name">Scientific Committee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">scientific.committee</field>
            <field name="view_mode">tree,form</field>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_scientific_committee_final_views" name="Scientific Committee" parent="regularity_menuitem"
                  action="action_scientific_committee_line_pages" sequence="8"/>

    </data>
</odoo>