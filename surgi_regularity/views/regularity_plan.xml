<odoo>
    <data>
    <record id="tree_view_regularity_plan_finalpage" model="ir.ui.view">
            <field name="name">Regularity Plan</field>
            <field name="model">regularity.plan</field>
            <field name="arch" type="xml">
                <tree string="Regularity Plan">
                    <field name="name"/>
                    <field name="plan_year"/>

                    <field name="registration_line"/>
                    <field name="country_of_orgin" widget="many2many_tags"/>

                    <field name="leagal_munfacter"/>
                    <field name="acual_munfacter" widget="many2many_tags"/>


                    <field name="issue_date"/>
                    <field name="expiry_date"/>




                </tree>
            </field>
        </record>


        <record id="form_view_regularity_plan_final" model="ir.ui.view">
            <field name="name">Regularity Plan</field>
            <field name="model">regularity.plan</field>
            <field name="arch" type="xml">
                <form string="Regularity Plan">

                    <sheet>
                        <div style="text-align:center">

                            <group string="Plan" col="4" colspan="6">

                            </group>

                        </div>
                        <group>
                            <div>
                                <group string="Basic Information">
                                     <field name="name"/>
                                     <field name="plan_year"/>
                                     <field name="registration_line"/>

                                </group>
                            </div>

                            <div>
                                <group string="Manufacture">

                                    <field name="country_of_orgin" widget="many2many_tags"/>

                                    <field name="leagal_munfacter"/>
                                  <field name="acual_munfacter" widget="many2many_tags"/>

                                </group>
                            </div>



                            <div>
                                <group string="Plan Date">
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                </group>
                            </div>



                        </group>

                        <notebook>

                            <page name="attachment" string="Attachment">
                                <group>

                                </group>


                                <field name="attachment_page">

                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_relation_control" string="Add"/>
                                        </control>

                                        <field name="certifect_plan"/>
                                        <field name="certifect_expiry_plan"/>

                                        <field name="attachment_product_plan" widget="many2many_binary" string="Attach"/>

                                    </tree>
                                </field>

                            </page>

                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>



        <record id="action_regularity_plan_line_pages" model="ir.actions.act_window">
            <field name="name">Regularity Plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">regularity.plan</field>
            <field name="view_mode">tree,form</field>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_regularity_plan_final_views" name="Regularity Plan" parent="regularity_menuitem"
                  action="action_regularity_plan_line_pages" sequence="7"/>

    </data>
</odoo>