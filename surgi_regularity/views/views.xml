<odoo>
    <data>


        <menuitem
                id="regularity_menuitem"
                name="Regularity"
                sequence="-1"
                web_icon="surgi_regularity,static/src/img/icon.jpg"

                groups="surgi_regularity.reg_viewer_group"
        />


        <!-- Product view modification -->
        <record model="ir.ui.view" id="product_template_only_form_view_reglau">
            <field name="name">product.template.reglau.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <notebook position="inside">
                    <page string="Regularity" attrs="{'invisible': [('is_medical', '=', False)]}">
                        <div class="oe_left">
                            <group>

                                <field name="strlize_field"/>
                                <field name="item_num_ref"/>
                                <field name="label_ref_num"/>
                                <field name="Product_class"/>

                            </group>
                        </div>

                        <div>


                                <field name="registration_line_id" widget="one2many_list">

                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_relation_control" string="Add"/>
                                        </control>

                                        <field name="registration_line"/>
                                        <field name="registration_line_name"/>
                                        <field name="registration_line_product_registration_number"/>
                                        <field name="registration_line_leagal_munfacter"/>
                                         <field name="registration_line_acual_munfacter" widget="many2many_tags"/>

                                                                         <field name="registration_line"/>
                                        <field name="registration_line_releas_date"/>
                                                                                <field name="registration_line_expiry_date"/>


                                    </tree>
                                </field>

                            </div>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="action_view_stock_reg" model="ir.actions.server">
            <field name="sequence" eval="1"/>
            <field name="state">code</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="code">action=model.button_stock_action()</field>
            <field name="name">Regularity</field>
        </record>

        <menuitem id="menu_stock_transfer" name="Product" parent="regularity_menuitem" action="action_view_stock_reg"
                  sequence="5"/>

    </data>
</odoo>