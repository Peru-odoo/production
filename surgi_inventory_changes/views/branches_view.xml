<odoo>
    <data>

        <record id="view_form_produc_branches_info" model="ir.ui.view">
            <field name="name">view.form.product.branches.info</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[last()]" position="after">
                            <page name="branches" string="Branches">

                                <field name="branches">

                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_relation_control" string="Add"/>
                                        </control>

                                        <field name="branche_name"/>
                                        <field name="max_num"/>
                                        <field name="min_num"/>

                                    </tree>
                                </field>

                            </page>
                </xpath>
            </field>
        </record>

        <record id="tree_view_branches_location_page" model="ir.ui.view">
            <field name="name">Branches</field>
            <field name="model">branch.location</field>
            <field name="arch" type="xml">
                <tree string="Branches">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="form_view_branches_location" model="ir.ui.view">
            <field name="name">Branches</field>
            <field name="model">branch.location</field>
            <field name="arch" type="xml">
                <form string="Branches">
                    <sheet>



                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_branches_location_pages" model="ir.actions.act_window">
            <field name="name">Branches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">branch.location</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_branches_location_views" name="Branches"  parent="stock.menu_stock_config_settings"
                  action="action_branches_location_pages" sequence="3"/>


    </data>
</odoo>