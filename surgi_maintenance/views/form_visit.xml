<odoo>
    <data>
        <record id="tree_view_pickup_visitpage" model="ir.ui.view">
            <field name="name">نموذج زيارة وخدمة ما بعد البيع</field>
            <field name="model">pickup.visit</field>
            <field name="arch" type="xml">
                <tree string="Pickup visit">


                    <field name="contact_rep_id"/>

                    <field name="contact_representative"/>
                    <field name="employee_id"/>


                    <field name="pickup_date"/>

                </tree>
            </field>
        </record>


        <record id="form_view_pickup_visit" model="ir.ui.view">
            <field name="name">نموذج زيارة وخدمة ما بعد البيع</field>
            <field name="model">pickup.visit</field>
            <field name="arch" type="xml">
                <form string="Pickup visit">
                    <sheet>
                        <div style="text-align:center">

                            <group string="نموذج زيارة وخدمة ما بعد البيع" col="4" colspan="6">

                            </group>
                        </div>
                        <group>
                            <div style="text-align:center">
                                <group>
                                    <field name="inform"/>
                                    <field name="planed"/>
                                    <field name="installed"/>

                                </group>
                            </div>
                            <div style="text-align:center">
                                <group>
                                    <field name="insure"/>
                                    <field name="uninsure"/>
                                </group>
                            </div>

                            <div>
                                <group string="Contact" name="con_id">
                                    <field name="contact_rep_id"/>
                                    <field name="contact_representative"/>
                                    <field name="representative_mobile"/>

                                </group>
                            </div>
                            <div>
                                <group string="Company" name="emp_id">
                                    <field name="employee_id"/>
                                </group>
                            </div>

                            <div>
                                <group string="Location" name="loc_id">
                                    <field name="street1" string="الشارع"/>
                                    <!--                                    <field name="street2"/>-->
                                    <field name="city" string="المدينة"/>
                                    <field name="country_id" string="الدولة"/>

                                </group>
                            </div>

                            <div>
                                <group>
                                    <field name="pickup_date"/>

                                </group>
                            </div>
                        </group>

                        <notebook>
                            <page name="product" string="بيانات الاجهزة">
                                <group>

                                </group>


                                <field name="product_forms">

                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_relation_control" string="Add a product"/>
                                        </control>
                                        <field name="product_form_id"/>
                                        <field name="internal_ref"/>
                                        <field name="specilaization" widget="many2many_tags"/>
                                        <field name="notic"/>


                                    </tree>
                                </field>

                            </page>
                            <page name="air" string="فحص دورة الهواء">
                                <group>

                                </group>

                                <div style="text-align:left">

                                    <group>
                                        <field name="press"/>
                                        <field name="filt"/>
                                        <field name="dry"/>

                                    </group>


                                </div>
                                <div style="text-align:justify">
                                    <group>
                                        <field name="comments1"/>


                                    </group>
                                </div>

                            </page>
                            <page name="dry" string="الغسيل">
                                <group>

                                </group>

                                <div style="text-align:left">

                                    <group string="تعليمات الغسيل">

                                        <field name="received"/>
                                        <field name="unreceived"/>



                                    </group>


                                </div>
                                <div style="text-align:right">

                                    <group>
                                        <field name="dry_or_not"/>

                                    </group>


                                </div>
                                <div style="text-align:justify">
                                    <group>
                                        <field name="comments2"/>


                                    </group>
                                </div>

                            </page>
                            <page name="auto" string="الاتوكلاف">
                                <group>

                                </group>

                                <div style="text-align:left">

                                    <group>
                                        <field name="temp"/>
                                        <field name="timeder"/>
                                        <field name="fit_to_dry"/>

                                    </group>


                                </div>
                                <div style="text-align:justify">
                                    <group>
                                        <field name="comments3"/>


                                    </group>
                                </div>

                            </page>
                            <page name="cust" string="انطباع العميل ">
                                <group>

                                </group>

                                <div style="text-align:left">

                                    <group>
                                        <field name="customer_vgood"/>
                                        <field name="customer_good"/>
                                        <field name="customer_bad"/>

                                    </group>


                                </div>
                                <div style="text-align:justify">
                                    <group>
                                        <field name="comments4"/>


                                    </group>
                                </div>

                            </page>

                            <page name="comments" string="ملاحظات">
                                <group>

                                    <field name="comments" placeholder="Other Information ...">


                                    </field>
                                </group>

                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_pickup_visit_pages" model="ir.actions.act_window">
            <field name="name">نموذج زيارة وخدمة ما بعد البيع</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pickup.visit</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_pickup_visit_views" name="نموذج زيارة وخدمة ما بعد البيع" parent="surgi_menu_reports_root"
                  action="action_pickup_visit_pages" sequence="4"/>


    </data>
</odoo>